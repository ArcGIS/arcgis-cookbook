{
    "arcgis": {
        "run_as_user": "arcgis",
        "version": "11.4",
        "repository": {
            "archives": "/opt/software/archives",
            "setups": "/opt/software/setups"
        },
        "server": {
            "install_dir": "/opt",
            "install_system_requirements": true,
            "primary_server_url": "https://primary.com:6443/arcgis",
            "admin_username": "<server_admin_username>",
            "admin_password": "<server_admin_password>",
            "pull_license": false,            
            "log_dir": "/opt/arcgis/server/usr/logs",
            "enable_debug": false,            
            "authorization_file": "/opt/software/authorization_files/11.4/server.prvc",
            "soc_max_heap_size": 64
        }
    },
    "run_list": [
        "recipe[arcgis-enterprise::system]",
        "recipe[arcgis-enterprise::server_node]"
    ]
}
